<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/header.ejs") %>
    <main>
      <div>
        
        <% for (animal of animals) { %>

        <article>
          <a href="/animals/<%= animal._id %>">
            <h2>
              <%= animal.species %> - <%= animal.extinct ? "Extinct" : "Not Extinct" %>
            </h2>
          </a>
         
        </a>
        </article>

        <% } %> 
        <a href="/animals/new">
            <button>Add New Animal</button>
      </div>
    </main>
  </body>
</html>